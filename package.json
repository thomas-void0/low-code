{
  "name": "low-code-demo",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite --mode development",
    "build:test": "tsc && cross-env NODE_ENV=test vite build --mode test",
    "build": "tsc && cross-env NODE_ENV=production vite build --mode production",
    "lint-staged:js": "eslint --ext .js,.jsx,.ts,.tsx",
    "lint:style": "stylelint --cache --fix \"**/*.{less,postcss,scss}\" --cache --cache-location node_modules/.cache/stylelint/",
    "preview": "vite preview"
  },
  "lint-staged": {
    "**/*.less": "npm run lint:style",
    "**/*.{js,jsx,ts,tsx}": "npm run lint-staged:js",
    "**/*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "ahooks": "^3.1.14",
    "antd": "^4.19.3",
    "classnames": "^2.3.1",
    "dayjs": "^1.11.0",
    "lodash-es": "^4.17.21",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router": "^6.2.2",
    "recoil": "^0.6.1"
  },
  "devDependencies": {
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.2",
    "@vitejs/plugin-react": "^1.0.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.12.0",
    "husky": "^7.0.4",
    "less": "^4.1.2",
    "prettier": "^2.6.1",
    "stylelint": "^14.6.1",
    "typescript": "^4.5.4",
    "vite": "^2.8.0"
  }
}
